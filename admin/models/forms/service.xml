<?xml version="1.0" encoding="utf-8" ?>
<form>
	<fields name="base">
		<fieldset name="base" label="COM_PAINTER_SERVICE_BASIC_LEGEND">
			<field name="service_id" type="hidden" class="validate-numeric" />
			<field name="ordering" type="hidden" class="validate-numeric" />
			<field name="service_name" type="text" class="inputbox" size="32" required="true" label="COM_PAINTER_SERVICE_NAME_LABEL" description="COM_PAINTER_SERVICE_NAME_DESC" />
			<field name="service_number" type="text" class="inputbox" size="32" label="COM_PAINTER_SERVICE_NUMBER_LABEL" description="COM_PAINTER_SERVICE_NUMBER_DESC" />
			<field name="service_desc" type="textarea" class="inputbox" label="COM_PAINTER_SERVICE_DESC_LABEL" description="COM_PAINTER_SERVICE_DESC_DESC" />
		</fieldset>
	</fields>
	<fields name="options">
		<fieldset name="options" label="COM_PAINTER_SERVICE_OPTIONS_LEGEND">
			<field name="published" type="radio" default="0" label="COM_PAINTER_PUBLISHED_LABEL" description="COM_PAINTER_SERVICE_PUBLISHED_DESC">
				<option value="0">COM_PAINTER_BOOLEAN_FALSE</option>
				<option value="1">COM_PAINTER_BOOLEAN_TRUE</option>
			</field>
			<field name="access" type="accesslevel" label="COM_PAINTER_ACCESS_LABEL" description="COM_PAINTER_SERVICE_ACCESS_DESC" />
		</fieldset>
	</fields>
</form>