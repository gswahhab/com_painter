<?xml version="1.0" encoding="utf-8" ?>
<form>
	<fields name="base">
		<fieldset name="base" label="COM_PAINTER_ADDRESS_BASIC_LEGEND">
			<field name="address_id" type="hidden" class="validate-numeric" />
			<field name="group_id" type="hidden" class="validate-numeric" />
			<field name="client_id" type="hidden" class="validate-numeric" />
			<field name="customer_id" type="hidden" class="validate-numeric" />
			<field name="address_line1" type="text" class="inputbox" size="64" required="true" label="COM_PAINTER_ADDRESS_LINE1_LABEL" description="COM_PAINTER_ADDRESS_LINE1_DESC" />
			<field name="address_line2" type="text" class="inputbox" size="64" label="COM_PAINTER_ADDRESS_LINE2_LABEL" description="COM_PAINTER_ADDRESS_LINE2_DESC" />
			<field name="address_city" type="text" class="inputbox" size="32" required="true" label="COM_PAINTER_ADDRESS_CITY_LABEL" description="COM_PAINTER_ADDRESS_CITY_DESC" />
			<field name="region_id" type="sql" class="inputbox validate-numeric" key_field="region_id" value_field="region_name" query="SELECT `region_id`, `region_name` FROM `#__painter_regions` WHERE `published` = 1 AND `country_id` = 1 ORDER BY `ordering`" required="true" label="COM_PAINTER_REGION_SELECT_LABEL" description="COM_PAINTER_REGION_SELECT_DESC" />
			<field name="address_postal_code" type="text" class="inputbox" size="8" required="true" label="COM_PAINTER_ADDRESS_POSTAL_LABEL" description="COM_PAINTER_ADDRESS_POSTAL_DESC" />
		</fieldset>
	</fields>
	<fields name="options">
		<fieldset name="options" label="COM_PAINTER_CUSTOMER_OPTIONS_LEGEND">
			<field name="published" type="radio" default="0" label="COM_PAINTER_PUBLISHED_LABEL" description="COM_PAINTER_CUSTOMER_PUBLISHED_DESC">
				<option value="0">COM_PAINTER_BOOLEAN_FALSE</option>
				<option value="1">COM_PAINTER_BOOLEAN_TRUE</option>
			</field>
			<field name="access" type="accesslevel" label="COM_PAINTER_ACCESS_LABEL" description="COM_PAINTER_CUSTOMER_ACCESS_DESC" />
		</fieldset>
	</fields>
</form>