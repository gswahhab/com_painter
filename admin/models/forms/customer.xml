<?xml version="1.0" encoding="utf-8" ?>
<form>
	<fields name="base">
		<fieldset name="base" label="COM_PAINTER_CUSTOMER_BASIC_LEGEND">
			<field name="customer_id" type="hidden" filter="unset" label="COM_PAINTER_CUSTOMER_ID_LABEL" description="COM_PAINTER_CUSTOMER_ID_DESC" />
			<field name="customer_name" type="text" class="inputbox" size="32" required="true" label="COM_PAINTER_CUSTOMER_NAME_LABEL" description="COM_PAINTER_CUSTOMER_NAME_DESC" />
			<field name="customer_number" type="text" class="inputbox" size="32" label="COM_PAINTER_CUSTOMER_NUMBER_LABEL" description="COM_PAINTER_CUSTOMER_NUMBER_DESC" />
			<field name="customer_logo" type="text" class="inputbox" size="32" label="COM_PAINTER_CUSTOMER_LOGO_LABEL" description="COM_PAINTER_CUSTOMER_LOGO_DESC" />
		</fieldset>
	</fields>
	<fields name="options">
		<fieldset name="options" label="COM_PAINTER_CUSTOMER_OPTIONS_LEGEND">
			<field name="published" type="radio" default="0" label="COM_PAINTER_PUBLISHED_LABEL" description="COM_PAINTER_CUSTOMER_PUBLISHED_DESC">
				<option value="0">COM_PAINTER_BOOLEAN_FALSE</option>
				<option value="1">COM_PAINTER_BOOLEAN_TRUE</option>
			</field>
			<field name="access" type="accesslevel" label="COM_PAINTER_ACCESS_LABEL" description="COM_PAINTER_CUSTOMER_ACCESS_DESC" />
		</fieldset>
	</fields>
</form>